pipeline {
    agent any

    stages {
    
        stage('Build Docker Image') {
            steps {
                script {
                    bat "docker build -t praptiajgaonkar/img ."
                }
            }
        }
        stage('Build and Run Docker Container') {
            steps {
                script {
                    bat "docker rm -f 2302 || exit 0"
                    bat "docker run -d --2302 praptiajgaonkar/img"
                }
            }
        }
    }
}
